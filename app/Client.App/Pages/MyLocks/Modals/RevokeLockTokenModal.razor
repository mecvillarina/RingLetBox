@namespace Client.App.Pages.MyLocks.Modals

<EditForm Model="@Model" OnValidSubmit="RevokeAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h5">
                <MudIcon Icon="@Icons.Material.Filled.Check" Class="mr-3 mb-n1" />
                Revoke Lock Confirmation
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudText>Are you sure you want to revoke the lock? This action is irrevocable.</MudText>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" Disabled="IsProcessing" OnClick="Cancel">Cancel</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" Disabled="IsProcessing" ButtonType="ButtonType.Submit" Color="Color.Primary">
                @if (IsProcessing)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                }
                else
                {
                    <MudText>Confirm</MudText>
                }
            </MudButton>

        </DialogActions>
    </MudDialog>
</EditForm>